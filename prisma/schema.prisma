datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  OWNER
  PROFESSOR
}

model User {
  id     Int    @id @default(autoincrement())
  email  String @unique
  name   String
  secret String

  student Student?
  staff   Staff?
  master  Master?
}

model Student {
  id Int @id @default(autoincrement())

  user       User        @relation(fields: [userId], references: [id])
  userId     Int         @unique
  gym        Academy     @relation(fields: [gym_id], references: [id])
  gym_id     Int         @unique
  classrooms Classroom[]
}

model Staff {
  id   Int  @id @default(autoincrement())
  role Role @default(PROFESSOR)

  user       User        @relation(fields: [userId], references: [id])
  userId     Int         @unique
  gym        Academy     @relation(fields: [gym_id], references: [id])
  gym_id     Int         @unique
  classrooms Classroom[]
}

model Master {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

model Academy {
  id   Int    @id @default(autoincrement())
  name String

  students Student[]
  staff    Staff[]
}

model Classroom {
  id Int @id @default(autoincrement())

  staff    Staff[]
  students Student[]
}
